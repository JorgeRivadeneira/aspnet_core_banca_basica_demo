@model BancaBasica.Models.EstadoCuenta;

@{
    ViewData["Title"] = "Estado de Cuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Estado de Cuenta</h3>
        </div>
    </div>


    <form method="POST" asp-action="Buscar">
        <div class="row">
            <div class="col-sm-10">
                <div class="form-group">
                    <label asp-for="Id_Cliente" class="control-label"></label>
                    <select asp-for="Id_Cliente" class="form-control"
                            asp-items="@(new SelectList(ViewBag.Clientes, "Id",  "Nombre"))">
                        <option>Seleccione una opcion</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="FechaIni" class="control-label"></label>
                    <input asp-for="FechaIni" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="FechaFin" class="control-label"></label>
                    <input asp-for="FechaFin" class="form-control" />
                </div>


                <div class="form-group">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                </div>
            </div>

        </div>
    </form>


