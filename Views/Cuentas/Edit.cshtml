@model BancaBasica.Models.Cuenta;

@{
    ViewData["Title"] = "Editar Cuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Cuenta</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="POST" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>

                <input type="hidden" asp-for="Id_Cuenta" />

                <div class="form-group">
                    <!--label asp-for="Id_Cliente" class="control-label"></!--label>
                    <input asp-for="Id_Cliente" class="form-control" />
                    <span asp-validation-for="Id_Cliente" class="text-danger"></span-->
                    <label asp-for="Id_Cliente" class="control-label"></label>
                    <select asp-for="Id_Cliente" class="form-control"
                            asp-items="@(new SelectList(ViewBag.Clientes, "Id",  "Nombre"))">
                        <option>Seleccione una opcion</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Saldo" class="control-label"></label>
                    <input asp-for="Saldo" class="form-control" />
                    <span asp-validation-for="Saldo" class="text-danger"></span>
                </div>

                <div  class="form-group">
                    <input type="submit" value="Editar Cuenta" class="btn btn-warning" />
                </div>

            </form>

        </div>

    </div>

    @section Scripts{
        @{ 
            <partial name="_ValidationScriptsPartial" />
        }
    }

